# Local bin folder for user tools (uv, etc.)
export PATH="$HOME/.local/bin:$PATH"

# Openssl bin
export PATH="/usr/local/opt/openssl/bin:$PATH"

# Go bin (GOPATH/bin is still useful even with mise)
if which go &> /dev/null; then
  export PATH="$(go env GOPATH)/bin:$PATH"
fi;

# Brew dependant paths
if which brew &> /dev/null; then
  # Add GNU utilities to replace macOS tools
  export PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH"
  export PATH="$(brew --prefix findutils)/libexec/gnubin:$PATH"
  export PATH="$(brew --prefix gawk)/libexec/gnubin:$PATH"
  export PATH="$(brew --prefix gnu-sed)/libexec/gnubin:$PATH"
  export PATH="$(brew --prefix gnu-tar)/libexec/gnubin:$PATH"
  export PATH="$(brew --prefix grep)/libexec/gnubin:$PATH"
  export PATH="$(brew --prefix make)/libexec/gnubin:$PATH"
  # Add gnu-getopt to path
  export PATH="/usr/local/opt/gnu-getopt/bin:$PATH"
fi

